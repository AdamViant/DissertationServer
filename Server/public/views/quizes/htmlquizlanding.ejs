<DOCTYPE html>
<html>

<head>
  <title></title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.8/angular.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.8/angular-route.js"></script>
  <link rel="stylesheet" type="text/css" href="views/resources/style.css"></link>
</head>

<body>

  <!-- Nav Bar -->
  <ul class="Nav-Bar">
    <li><img id="Nav-Logo" src="views/resources/images/Code.Scribe.png" alt="Code.Scribe Logo"></li>
    <li><a href="/index" class="Nav-Home">Home</a></li>
    <li class="New-Value"><br /><br /></li>
    <li><a class="Nav-Header">HTML Guides</a></li>
    <li><a href="/htmlbasics" class="Nav-Value">HMTL Basics</a></li>
    <li class="New-Value"><br /><br /></li>
    <li><a class="Nav-Header">CSS Guides</a></li>
    <li><a href="/cssbasics" class="Nav-Value">CSS Basics</a></li>
    <li class="New-Value"><br /><br /></li>
    <li><a class="Nav-Header">Quizes</a></li>
    <li><a class="Nav-Active">Html Quizes</a></li>
    <li><a href="/cssquiz" class="Nav-Value">CSS Quizes</a></li>
    <li class="Nav-Spacer"></li>
    <li><a href="/profile" class="Nav-Profile">Profile</a></li>
    <li><a href="/logout" class="Nav-Logout">Log-Out</a></li>
  </ul>

  <!-- Header -->
  <div class="Div-Header">
    <h1 class="Page-Header">Quizes</h1>
  </div>

  <!-- Body -->
  <div class="Div-Body">
    <div class="Body-Container">

      <!-- Messages -->
      <%- include ("../partials/messages") %>

      <h1>Your Score:</h1>

      </br>

      <table class="tbl">
        <tr class="tbl-Header">
          <th>Username</th>
          <th>Score</th>
          <th>Date</th>
        </tr>
        <tr class="tbl-r">
          <td><%= score.username %></td>
          <td><%= score.result %></td>
          <td><%= score.date %></td>
        </tr>
      </table>

      </br></br></br></br>

      <button class ="Fieldset-Button"><a href="htmlQuizRun" class="passive"><%= message %></a></button>

      </br></br></br></br>

      <h1>Leaderboard:</h1>

      </br>

      <table class="tbl">
        <tr class="tbl-Header">
          <th>Username</th>
          <th>Score</th>
        </tr>
        <% leaders.forEach(leader => { %>
        <tr class="tbl-r<%= leader.style %>">
          <td><%= leader.username %></td>
          <td><%= leader.result %></td>
        </tr>
        <% }); %>
      </table>

    </div>
  </div>

</body>
</html>
